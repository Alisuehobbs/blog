<div class="container center-align">
    <div class="right-align">
        <a href="/" class="waves-effect waves-light btn-large">Home</a>
        <a href="/signup" class="waves-effect waves-light btn-large">Sign Up</a>
    </div>

    <h1>LOGIN</h1>

    <div class="row">
        <form action="/login" method="post" class="col s12">
            <div class="row">
                <div class="input-field col s12">
                    <input id="email" type="email" class="validate" name="email">
                    <label for="em">Email</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input id="password" type="password" class="validate" name="password">
                    <label for="pw">Password</label>
                </div>
            </div>
            <div class="container center-align">
                <button class="btn waves-effect waves-light" type="submit" name="action" value="submit">Submit
            </button>
            </div>
        </form>

    </div>
