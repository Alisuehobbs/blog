<div class="container">
  <div class="right-align">
    <a class="btn waves-effect waves-light" href="/logout">Log Out
    </a>
  </div>
    <h1>Blog Posts</h1>


    <a class="btn waves-effect waves-light" href="/newpost">Create A New Post</a>

    {{#each posts}}
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content black-text">
                        <a href="/comment/{{id}}" class="card-title">{{post_title}}</a>
                        <p class="content">{{content}}</p>
                    </div>
                    <div class="date">
                      {{date_created}} {{date_updated}}
            </div>
        </div>
    {{/each}}
</div>
